<div class="item">
  {{#imageurl}}
    <div class="img" style="background-image:url({{ imageurl }})"></div>
  {{/imageurl}}
  <div class="title">{{ title }}</div>
  <div class="address">{{ address }}</div>
  {{#fields}}
    {{^fulltext}}
      <div class="fld {{ id }}">
        <i>{{ name }}</i><span>{{ data }}</span>
      </div>
    {{/fulltext}}
    {{#fulltext}}
      <div class="fld {{ id }}">
        <i>{{ name }}</i><span>{{ data }}</span>
        <a onclick="fulltextLink(this)">...mehr</a>
        <hide>{{ fulltext }}</hide>
      </div>
    {{/fulltext}}
  {{/fields}}
  {{#detailurl}}
    <div class="buttons">
      <a class="btn" href="{{ detailurl }}" target="_blank">
        Apply
      </a>
    </div>
  {{/detailurl}}
</div>
