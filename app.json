{
  "name": "Flirtable",
  "description": "Take your data to the air, with flair.",
  "repository": "https://github.com/datalets/flirtable",
  "keywords": [],
  "env": {
    "FLASK_ENV": {
      "description": "Flask Enviroment",
      "value": "production"
    },
    "AIRTABLE_BASE": {
      "description": "Airtable base ID"
    },
    "AIRTABLE_NAME": {
      "description": "Table name"
    },
    "AIRTABLE_KEY": {
      "description": "Airtable API key"
    },
    "AIRTABLE_LINK": {
      "description": "Detailed view link"
    },
    "AIRTABLE_FORM": {
      "description": "Add more form link"
    },
    "MAPBOX_KEY": {
      "description": "Mapbox API key"
    },
    "BASE_FIELDS": {
      "description": "Semicolon-separated column name=value mappings"
    },
    "POPUP_FIELDS": {
      "description": "Comma-delimited list of columns shown in popup"
    },
    "SORT_KEY": {
      "description": "Field name to sort on"
    }
   },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
}
